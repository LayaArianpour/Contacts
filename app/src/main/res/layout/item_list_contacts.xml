<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"

        >
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/txt_firstCharacterNameOfContact"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            />


        <TextView
            android:id="@+id/txt_nameOfContact"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/colorForegroundItem"
            android:text="1234567891234567"
            />

        <TextView
            android:id="@+id/txt_phoneOfContact"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:textColor="@color/colorForegroundItem"
            android:text="1234567891234"

            />

        <Button
            android:id="@+id/btn_editContact"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/edit" />

    </LinearLayout>
    <TextView
        android:id="@+id/txt_lineBottumItem"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorBackgroundInput"
        android:layout_below="@+id/item_container"/>
</RelativeLayout>